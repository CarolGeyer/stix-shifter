{
    "connection": {
        "type": {
            "default": "guardium"
        },
        "host": {
            "type": "text"
        },
        "port": {
            "default": 443,
            "type": "number"
        },
        "help": {
            "default": "https://www.ibm.com/support/knowledgecenter/SSTDPP_1.1.0/docs/scp-core/data-sources-elastic.html",
            "type": "link"
        },
        "limit": {
            "default": 1000,
            "max": 10000,
            "type": "number"
        },
        "timeout": {
            "default": 1,
            "max": 60,
            "type": "number"
        },
        "cert": {
            "type": "text",
            "optional": true
        },
        "sni": {
            "type": "text",
            "optional": true
        },
        "options": {
            "client_id": {
                "type": "text"
            },
            "client_secret": {
                "type": "password"
            }
        }
    },
    "configuration": {
        "type": {
            "default": "guardium"
        },
        "auth": {
            "username": {
                "type": "password"
            },
            "password": {
                "type": "password"
            }
        }
    }
}