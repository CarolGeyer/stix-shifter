{
    "type": "QRadar",
    "configure": {
        "name": {
            "type": "text"
        },
        "description": {
            "type": "text"
        },
        "host": {
            "type": "text"
        },
        "port": {
            "default": 443,
            "type": "number"
        },
        "help": {
            "default": "https://www.ibm.com/support/knowledgecenter/SSTDPP_1.1.0/docs/scp-core/data-sources-qradar.html",
            "type": "link"
        }
    },
    "certificate": {
        "sni": {
            "type": "text"
        },
        "cert": {
            "type": "text"
        }
    },
    "parameters": {
        "limit": {
            "hint": "The maximum number of entries or objects that are returned by search query",
            "default": 1000,
            "max": 10000,
            "type": "number"
        },
        "timeout": {
            "hint": "The time limit in minutes for how long the query is run on the data source",
            "default": 1,
            "max": 60,
            "type": "number"
        },
        "concurrent": {
            "hint": "The number of simultaneous connections that can be made between Cloud Pak for Security and the data source",
            "default": 4,
            "max": 60,
            "type": "number"
        }
    },
    "iam": {
        "sec": {
            "type": "text"
        }
    }
}